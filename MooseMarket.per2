
; Need Villagers!
(defrule
  (gold-amount > 200)
  (food-amount < 50)
  (can-buy-commodity food)
  (commodity-buying-price food < 100)
  (unit-type-count-total villager == 0)
=>
  (release-escrow gold)
  (buy-commodity food)
)

; Stone! We love stone in the castle age!
(defrule
  (current-age == castle-age)
  (gold-amount > 1250)
  (stone-amount < 700)
  (can-buy-commodity stone)
=>
  (release-escrow gold)
  (buy-commodity stone)
)
